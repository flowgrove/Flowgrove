import os
import subprocess
from datetime import datetime

# Repo configuration (set once and forget)
REPO_URL = "https://github.com/flowgrove/Flowgrove.git"
BRANCH = "main"
README_FILE = "README.md"

# Step 1: Ensure repo is clean and up to date
def git_sync():
    subprocess.run(["git", "fetch", "origin"], check=True)
    subprocess.run(["git", "checkout", BRANCH], check=True)
    subprocess.run(["git", "pull", "origin", BRANCH], check=True)

# Step 2: Auto-generate professional README
def generate_readme():
    content = f"""# ğŸŒ± Flowgrove  

Your **next-level system**, fully plug-and-play, clean, and professional.  

![Banner](assets/banner.png)

## ğŸš€ Features
- Plug & Play â€” drop it in, run it, done.  
- Auto-organized file structure.  
- Instant updates and publishing.  
- Professional documentation & branding.  

## ğŸ“‚ Structure
Flowgrove/
â”œâ”€â”€ app.py
â”œâ”€â”€ autopublish.py
â”œâ”€â”€ templates/
â”‚   â””â”€â”€ index.html
â”œâ”€â”€ static/
â”‚   â”œâ”€â”€ css/
â”‚   â”œâ”€â”€ js/
â”‚   â””â”€â”€ images/
â””â”€â”€ README.md
## ğŸŒ Website
[Visit the Website](https://your-website-link.com)

## ğŸ“¸ Preview
![Screenshot](assets/preview.png)

---

âœ¨ Updated automatically on: {datetime.utcnow().strftime("%Y-%m-%d %H:%M:%S UTC")}  
"""
    with open(README_FILE, "w", encoding="utf-8") as f:
        f.write(content)

# Step 3: Commit & push changes
def git_push():
    subprocess.run(["git", "add", "."], check=True)
    subprocess.run(["git", "commit", "-m", "ğŸ”¥ Auto-clean + update with autopublish"], check=False)
    subprocess.run(["git", "push", "origin", BRANCH], check=True)

def main():
    print("ğŸ”„ Syncing repo...")
    git_sync()
    print("ğŸ“ Generating README...")
    generate_readme()
    print("â¬†ï¸ Pushing updates...")
    git_push()
    print("âœ… All done! Your repo is clean, updated, and professional.")

if __name__ == "__main__":
    main()
python autopublish.py
import os
import subprocess
import requests
from bs4 import BeautifulSoup
from datetime import datetime

# Repo configuration
REPO_URL = "https://github.com/flowgrove/Flowgrove.git"
BRANCH = "main"
README_FILE = "README.md"
SITE_URL = "https://your-website-link.com"  # ğŸ”— put your site here

# Step 1: Sync repo
def git_sync():
    subprocess.run(["git", "fetch", "origin"], check=True)
    subprocess.run(["git", "checkout", BRANCH], check=True)
    subprocess.run(["git", "pull", "origin", BRANCH], check=True)

# Step 2: Detect branding from website
def detect_branding():
    branding = {"color": "#4CAF50", "title": "Flowgrove", "logo": None}
    try:
        r = requests.get(SITE_URL, timeout=10)
        soup = BeautifulSoup(r.text, "html.parser")

        # Grab title
        title = soup.title.string if soup.title else "Flowgrove"
        branding["title"] = title.strip()

        # Grab theme color (meta tag)
        meta_color = soup.find("meta", {"name": "theme-color"})
        if meta_color and meta_color.get("content"):
            branding["color"] = meta_color["content"]

        # Grab logo (first image with 'logo' in name)
        logo = soup.find("img", {"src": lambda x: x and "logo" in x.lower()})
        if logo:
            branding["logo"] = logo["src"]

    except Exception as e:
        print(f"âš ï¸ Branding detection failed, using defaults: {e}")

    return branding

# Step 3: Auto-generate README with branding
def generate_readme(branding):
    logo_md = f"![Logo]({branding['logo']})\n\n" if branding["logo"] else ""
    content = f"""# ğŸŒ± {branding['title']}  

{logo_md}Your **next-level system**, fully plug-and-play, clean, and professional.  

## ğŸš€ Features
- Plug & Play â€” drop it in, run it, done.  
- Auto-organized file structure.  
- Instant updates and publishing.  
- Professional documentation & branding.  

## ğŸ“‚ Structure
Flowgrove/
â”œâ”€â”€ app.py
â”œâ”€â”€ autopublish.py
â”œâ”€â”€ templates/
â”‚   â””â”€â”€ index.html
â”œâ”€â”€ static/
â”‚   â”œâ”€â”€ css/
â”‚   â”œâ”€â”€ js/
â”‚   â””â”€â”€ images/
â””â”€â”€ README.md
## ğŸŒ Website
[{branding['title']}]({SITE_URL})

## ğŸ¨ Branding
- **Primary Color:** {branding['color']}  

## ğŸ“¸ Preview
![Screenshot](assets/preview.png)

---

âœ¨ Updated automatically on: {datetime.utcnow().strftime("%Y-%m-%d %H:%M:%S UTC")}  
"""
    with open(README_FILE, "w", encoding="utf-8") as f:
        f.write(content)

# Step 4: Commit & push
def git_push():
    subprocess.run(["git", "add", "."], check=True)
    subprocess.run(["git", "commit", "-m", "ğŸ”¥ Auto-clean + update with autopublish + branding"], check=False)
    subprocess.run(["git", "push", "origin", BRANCH], check=True)

def main():
    print("ğŸ”„ Syncing repo...")
    git_sync()
    print("ğŸ¨ Detecting branding...")
    branding = detect_branding()
    print(f"âœ… Detected branding: {branding}")
    print("ğŸ“ Generating README...")
    generate_readme(branding)
    print("â¬†ï¸ Pushing updates...")
    git_push()
    print("ğŸš€ Done! README now matches your website branding.")

if __name__ == "__main__":
    main()
